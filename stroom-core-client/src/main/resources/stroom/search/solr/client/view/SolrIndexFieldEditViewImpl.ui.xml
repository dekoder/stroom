<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tickbox="urn:import:stroom.widget.tickbox.client.view"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="solrIndexFieldUse" label="Field Use">
            <l:SelectionBox ui:field="type" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexFieldName" label="Field Name">
            <g:TextBox ui:field="fieldName" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexFieldType" label="Field Type">
            <l:SelectionBox ui:field="fieldType" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="solrIndexDefaultValue" label="Default Value">
            <g:TextBox ui:field="defaultValue" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="stored" identity="solrIndexStored" label="Stored"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="indexed" identity="solrIndexIndexed" label="Indexed"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="uninvertible" identity="solrIndexUninvertible" label="Uninvertible"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="docValues" identity="solrIndexDocValues" label="Doc Values"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="multiValued" identity="solrIndexMultiValued" label="Multi Valued"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="required" identity="solrIndexRequired" label="Required"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="omitNorms" identity="solrIndexOmitNorms" label="Omit Norms"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="omitPositions" identity="solrIndexOmitPositions" label="Omit Positions"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="omitTermFreqAndPositions" identity="solrIndexOmitTermFreqAndPositions" label="Omit Term Freq And Positions"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="termVectors" identity="solrIndexTermVectors" label="Term Vectors"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="termPositions" identity="solrIndexTermPositions" label="Term Positions"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="termOffsets" identity="solrIndexTermOffsets" label="Term Offsets"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="termPayloads" identity="solrIndexTermPayloads" label="Term Payloads"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="sortMissingFirst" identity="solrIndexSortMissingFirst" label="Sort Missing First"/>
        </form:FormGroup>
        <form:FormGroup>
            <tickbox:CustomCheckBox ui:field="sortMissingLast" identity="solrIndexSortMissingLast" label="Sort Missing Last"/>
        </form:FormGroup>

        <g:HTML ui:field="synchState" styleName="dock-min"></g:HTML>
    </g:FlowPanel>
</ui:UiBinder>
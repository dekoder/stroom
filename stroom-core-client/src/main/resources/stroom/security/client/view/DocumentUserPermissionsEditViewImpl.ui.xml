<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:b="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="document" label="Document">
            <g:Label ui:field="document"/>
        </form:FormGroup>
        <form:FormGroup ui:field="userFormGroup" identity="user" label="User">
            <g:Label ui:field="user"/>
        </form:FormGroup>
        <form:FormGroup identity="permission" label="Permission">
            <l:SelectionBox ui:field="permission"/>
        </form:FormGroup>
        <b:Button ui:field="applyPermissionToDescendants" addStyleNames="allow-focus Button--contained-primary" text="Apply To Descendants"/>
        <b:Button ui:field="editCreatePermissions" addStyleNames="allow-focus Button--contained-primary" text="Set Document Create Permissions"/>
    </g:FlowPanel>
</ui:UiBinder> 

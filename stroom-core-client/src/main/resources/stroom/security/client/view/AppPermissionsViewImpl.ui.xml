<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:l="urn:import:stroom.item.client">
    <g:ThinSplitLayoutPanel styleName="max default-min-sizes">
        <g:south size="600">
            <g:ThinSplitLayoutPanel styleName="max">
                <g:south size="200">
                    <form:FormGroup ui:field="detailsFormGroup"
                                    addStyleNames="form-label-padding">
                        <g:SimplePanel styleName="max form-padding">
                            <g:HTML ui:field="details" styleName="max"/>
                        </g:SimplePanel>
                    </form:FormGroup>
                </g:south>
                <g:center>
                    <form:FormGroup ui:field="appPermissionsFormGroup"
                                    addStyleNames="form-label-padding">
                        <g:SimplePanel ui:field="appPermissionsEdit"
                                       styleName="max"/>
                    </form:FormGroup>
                </g:center>
            </g:ThinSplitLayoutPanel>
        </g:south>
        <g:center>
            <g:FlowPanel>
                <form:FormGroup label="Permission Visibility" addStyleNames="form-padding">
                    <l:SelectionBox ui:field="permissionVisibility"/>
                </form:FormGroup>
                <form:FormGroup label="Users and Groups" addStyleNames="form-label-padding max">
                    <g:SimplePanel ui:field="appUserPermissionsList" styleName="max"/>
                </form:FormGroup>
            </g:FlowPanel>
        </g:center>
    </g:ThinSplitLayoutPanel>
</ui:UiBinder>

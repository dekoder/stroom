<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:p="urn:import:stroom.widget.button.client"
             xmlns:b="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="AuthErrorView">

        <g:FlowPanel styleName="AuthErrorViewFormPanel">
            <g:FlowPanel styleName="max form-padding form AuthErrorViewForm">

                <g:SimplePanel styleName="AuthErrorViewImageContainer">
                    <g:SimplePanel ui:field="image" styleName="AuthErrorViewImage"/>
                </g:SimplePanel>

                <form:FormGroup identity="error" label="Authentication Error">
                    <g:Label ui:field="errorText" styleName="authErrorText"/>
                </form:FormGroup>

                <g:SimplePanel styleName="AuthErrorViewGenericMessageContainer">
                    <g:HTML ui:field="genericMessage"/>
                </g:SimplePanel>

            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
>
    <g:FlowPanel styleName="max form-padding form">
        <form:FormGroup identity="password" label="Email Address">
            <g:FlowPanel>
                <g:FlowPanel addStyleNames="emailTextBoxOuter">
                    <g:TextBox ui:field="email" addStyleNames="emailTextBox"/>
                </g:FlowPanel>

                <!-- Add feedback -->
                <g:Label ui:field="emailFeedback" styleName="feedback"/>
            </g:FlowPanel>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder>

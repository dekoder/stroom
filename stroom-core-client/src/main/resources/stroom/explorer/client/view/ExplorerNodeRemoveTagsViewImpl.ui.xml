<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:stroom.widget.button.client"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="removeNodeTags max form flex-column">
        <g:FlowPanel styleName="removeNodeTagsListsContainer form dock-max flex-row">
            <form:FormGroup identity="removeNodeTagsNodeTags"
                            addStyleNames="removeNodeTagsNodeTagsFrmGrp dock-max"
                            label="Existing Tags">
                <form:HelpHTML>
                    Select the tag(s) to remove from the documents.
                </form:HelpHTML>
                <g:ListBox ui:field="nodeTagsListBox"
                           addStyleNames="form-control dock-max max"/>
            </form:FormGroup>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>

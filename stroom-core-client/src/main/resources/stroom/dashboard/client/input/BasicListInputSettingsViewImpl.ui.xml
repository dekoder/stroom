<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:stroom.widget.tickbox.client.view"
             xmlns:form="urn:import:stroom.widget.form.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="basicListInputSettingsId" label="Id">
            <g:Label ui:field="id" addStyleNames="w-100 stroom-control-label"/>
        </form:FormGroup>
        <form:FormGroup identity="basicListInputSettingsName" label="Name">
            <g:TextBox ui:field="name" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="basicListInputSettingsName" label="Key">
            <g:TextBox ui:field="key" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup identity="basicListInputSettingsName" label="Values">
            <g:TextArea ui:field="values" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup>
            <v:CustomCheckBox ui:field="useDictionary" identity="basicListInputSettingsExtractValues"
                              label="Use Dictionary"/>
        </form:FormGroup>
        <form:FormGroup identity="basicListInputSettingsDictionary" label="Dictionary">
            <g:SimplePanel ui:field="dictionary" addStyleNames="w-100"/>
        </form:FormGroup>
        <form:FormGroup>
            <v:CustomCheckBox ui:field="allowTextEntry" identity="basicListInputSettingsAllowTextEntry"
                              label="Allow Text Entry"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 

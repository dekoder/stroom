<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:paging="urn:import:stroom.widget.button.client"
             xmlns:refresh-button="urn:import:stroom.data.pager.client">
    <g:FlowPanel styleName="pager-paging">
        <g:Label ui:field="lblTitle" styleName="pager-label"/>
        <g:HTMLPanel styleName="pager-space">&nbsp;</g:HTMLPanel>
        <g:Label ui:field="lblFrom" styleName="pager-label"/>
        <g:TextBox ui:field="txtFrom" styleName="pager-textBox" visible="false"/>
        <g:Label ui:field="lblToSeparator" text="&nbsp;to&nbsp;" styleName="pager-label"/>
        <g:Label ui:field="lblTo" styleName="pager-label"/>
        <g:TextBox ui:field="txtTo" styleName="pager-textBox" visible="false"/>
        <g:Label ui:field="lblOfSeparator" text="&nbsp;of&nbsp;" styleName="pager-label"/>
        <g:Label ui:field="lblOf" styleName="pager-label"/>
        <g:HTMLPanel styleName="pager-space">&nbsp;</g:HTMLPanel>
        <g:FlowPanel styleName="button-container">
            <paging:SvgButton ui:field="first"/>
            <paging:SvgButton ui:field="prev"/>
            <paging:SvgButton ui:field="next"/>
            <paging:SvgButton ui:field="last"/>
            <refresh-button:RefreshButton ui:field="refresh"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
